{
  "name": "hyosan-chat",
  "version": "0.1.1",
  "description": "A library of web components for AI conversations based on lit and shoelace",
  "keywords": [
    "hyosan-chat",
    "Lit",
    "Shoelace",
    "AI",
    "chat",
    "Web Components",
    "web chat"
  ],
  "author": {
    "name": "Ryan"
  },
  "license": "MIT",
  "type": "module",
  "files": ["dist", "README.md", "LICENSE"],
  "main": "./dist/hyosan-chat.umd.cjs",
  "module": "./dist/hyosan-chat.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/hyosan-chat.js",
      "require": "./dist/hyosan-chat.umd.cjs"
    },
    "./dist/hyosan-chat.css": "./dist/hyosan-chat.css",
    "./dist/sheets/*": "./dist/sheets/*",
    "./dist/types/*": "./dist/types/*",
    "./dist/service/*": "./dist/service/*",
    "./dist/utils/*": "./dist/utils/*"
  },
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --config vite.config.lib.ts",
    "build:pack": "pnpm run build:lib && pnpm pack",
    "preview": "vite preview",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "cz": "czg"
  },
  "dependencies": {
    "@microsoft/fetch-event-source": "^2.0.1",
    "@shoelace-style/shoelace": "^2.20.0",
    "emittery": "^1.1.0",
    "highlight.js": "^11.11.1",
    "lit": "^3.2.1",
    "markdown-it-async": "^2.2.0",
    "markdown-it-highlightjs": "^4.2.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mathjax3": "^4.3.2",
    "openai": "^4.86.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@shoelace-style/localize": "^3.2.1",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-link-attributes": "^3.0.5",
    "cz-git": "^1.11.0",
    "czg": "^1.11.0",
    "lint-staged": "^15.4.3",
    "rollup-plugin-copy": "^3.5.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.2",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.1",
    "vite-plugin-static-copy": "^2.3.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{html,css,json,md,vue,js,ts,jsx,tsx}": "pnpm run lint:fix"
  }
}
